{% extends 'base.html.twig'%}
{% block body %}
{% block head %}
<style>
        input{
            text-align:center;
         }
</style>
{% endblock %}

{% if app.user %}
<h1>Déjà en ligne</h1>
<a href="{{ path('interface') }}">Move out</a>
{% else %}
<h1 align="center">Connexion</h1>

<div class="container">
<form action="{{ path('main_login')}}" method='POST'>

<div class="form-group">
<input placeholder="Username" required name="_username" type="text" class="form-control">
</div>

<div class="form-group">
        <input placeholder="Password" required name="_password" type="password" class="form-control">
        </div>
<div class="form-group" align="center">
    <button type="submit" class="btn btn-success">Login</button>
</div>
</form>
</div>



{% endif %}

{% endblock %}